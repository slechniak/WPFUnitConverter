<Window x:Class="DemantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemantApp"
        mc:Ignorable="d"
        Title="Simple Converter"
        Height="250"
        Width="400"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button" x:Key="ConvertButtonStyle">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="IsDefault" Value="True"/>
        </Style>

        <Style TargetType="Grid" x:Key="BaseGridStyle">
            <Setter Property="MinWidth" Value="250" />
            <Setter Property="MaxWidth" Value="250" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

    </Window.Resources>

        <!-- layout grid -->
    
    <Grid x:Name="BaseGrid"
          Style="{StaticResource BaseGridStyle}">
            
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
            
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- measurement label -->
            
        <Label x:Name="MeasurementLabel"
               Grid.Row="0"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               Content="Length"/>

        <!-- input and result labels -->

        <Label x:Name="InputLabel"
               Grid.Row="1"
               Grid.Column="0"
               Content="From:"/>  
            
        <Label x:Name="ResultLabel"
               Grid.Row="1"
               Grid.Column="1"
               Content="To:"/>

        <!-- input and result textboxes -->
            
        <TextBox x:Name="InputTextBox"
                 Grid.Row="2"
                 Grid.Column="0"/>
            
        <TextBox x:Name="ResultTextBox"
                 Grid.Row="2"
                 Grid.Column="1"/>

        <!-- input and result units -->
            
        <Label x:Name="InputUnitLabel"
               Grid.Row="3"
               Grid.Column="0"
               Content="kilometer"/>

        <Label x:Name="ResultUnitLabel"
               Grid.Row="3"
               Grid.Column="1"
               Content="mile"/>

        <!-- convert button -->
            
        <Button x:Name="ConvertButton"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Style="{StaticResource ConvertButtonStyle}"
                Click="ConvertButton_Click"
                Content="Convert"/>

    </Grid>
</Window>
